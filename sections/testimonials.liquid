<style>
  .testimonials-section {
    background: #ead1c1;
    padding: 0rem 0 4rem;
  }

  .testimonials-container {
    max-width: 100%;
    margin: 0 auto;
    padding: 0;
  }

  .testimonials-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .testimonials-subtitle {
    font-size: 0.9rem;
    text-transform: uppercase;
    color: #666;
    margin-bottom: 0.75rem;
    letter-spacing: 0.1em;
  }

  .testimonials-text {
    font-size: 0.9rem;
    font-weight: 400;
    text-transform: uppercase;
    width: 35%;
    margin: 1.2rem auto 0;
    color: #666;
    letter-spacing: 0.1em;
  }

  .testimonials-title {
    font-family: 'Instrument Serif', sans-serif;
    font-size: 3rem;
    font-weight: 400;
    font-style: italic;
  }

  .testimonials-subtitle.js-testimonials-subtitle {
    font-size: 0.9rem;
    font-weight: 400;
    text-transform: uppercase;
    width: 35%;
    margin: 1.2rem auto 0;
    color: #666;
  }

  .testimonials-grid,
  .testimonials-swiper {
    border-radius: 8px;
    position: relative;
    padding-left: 4rem;
    padding-right: 4rem;
  }

  .swiper-wrapper {
    display: flex;
  }

  .testimonial-card {
    background: #ffffff;
    border: 1px solid #000;
    border-radius: 16px;
    padding: 2rem;
    height: 50vh;
    width: 100%;
    min-width: 0;
    cursor: grab;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .testimonial-card:active {
    cursor: grabbing;
  }

  .testimonial-stars {
    display: flex;
    margin-bottom: 1rem;
    justify-content: center;
  }

  .star {
    color: #ff6b35;
    font-size: 1.2rem;
    margin-right: 2px;
  }

  .testimonial-title {
    font-family: 'Gumani', serif;
    font-size: 1.3rem;
    font-weight: 600;
    color: #191818;
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .testimonial-text {
    text-transform: uppercase;
    font-size: 0.9rem;
    line-height: 1.6;
    color: #444;
    margin-bottom: 1.5rem;
  }

  .testimonial-author {
    font-family: 'Gumani', serif;
    font-size: 1rem;
    color: #888;
    font-weight: 400;
  }

  @media (max-width: 1024px) {
    .testimonials-swiper {
      padding-left: 2rem;
      padding-right: 2rem;
    }
  }

  @media (max-width: 768px) {
    .testimonials-section {
      padding: 4rem 0;
    }

    .testimonials-container {
      padding: 0 1rem;
    }

    .testimonials-title {
      font-size: 2.2rem;
    }

    .testimonials-subtitle {
      font-size: 1rem;
    }

    .testimonials-swiper {
      padding-left: 0;
      padding-right: 0;
    }

    .testimonial-card {
      padding: 1.5rem;
      width: 100%;
      min-width: 100%;
    }

    .testimonial-title {
      font-size: 1.2rem;
    }
  }

  @media (max-width: 480px) {
    .testimonials-title {
      font-size: 1.8rem;
    }

    .testimonial-card {
      padding: 1.25rem;
    }

    .testimonial-title {
      font-size: 1.1rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    new Swiper('.testimonials-swiper', {
      slidesPerView: 3,
      spaceBetween: 32,
      loop: true,
      autoplay: {
        delay: 3000,
        disableOnInteraction: false,
      },
      breakpoints: {
        1024: { slidesPerView: 3 },
        768: { slidesPerView: 2 },
        0: { slidesPerView: 1 },
      },
    });
  });
</script>
