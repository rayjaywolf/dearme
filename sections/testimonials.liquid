<script>
  document.addEventListener('DOMContentLoaded', function () {
    // Initialize Swiper
    function initTestimonialsSwiper() {
      if (typeof Swiper === 'undefined') {
        console.error('Swiper not loaded');
        return;
      }

      const swiper = new Swiper('.testimonials-carousel', {
        slidesPerView: 1,
        spaceBetween: 0,
        loop: true,
        autoplay: {
          delay: 3000,
          disableOnInteraction: false,
        },
        pagination: {
          el: '.swiper-pagination',
          clickable: true,
        },
        breakpoints: {
          768: {
            slidesPerView: 3,
            spaceBetween: 0,
          },
        },
        on: {
          init: function () {
            // Re-observe testimonial cards for GSAP animations after Swiper init
            if (window.reobserveTestimonialCards) {
              setTimeout(window.reobserveTestimonialCards, 100);
            }
          },
        },
      });

      return swiper;
    }

    // GSAP Text Animations
    function initTestimonialsAnimations() {
      if (typeof gsap === 'undefined' || typeof SplitText === 'undefined') return;

      // Register plugins
      gsap.registerPlugin(SplitText);

      const section = document.querySelector('.testimonials-section');
      if (!section) return;

      // Initialize masked text reveal for header content
      function initHeaderTextReveal() {
        const title = document.querySelector('.js-testimonials-title');
        const subtitles = document.querySelectorAll('.testimonials-subtitle');

        if (!title || subtitles.length === 0) return;

        // Create SplitText with masking for header elements
        const titleSplitText = new SplitText(title, { type: 'lines', linesClass: 'line' });
        const subtitleSplitTexts = Array.from(subtitles).map(
          (subtitle) => new SplitText(subtitle, { type: 'lines', linesClass: 'line' })
        );

        // Create mask wrapper for each line
        [titleSplitText, ...subtitleSplitTexts].forEach((splitText) => {
          splitText.lines.forEach((line) => {
            const wrapper = document.createElement('div');
            wrapper.style.overflow = 'hidden';
            wrapper.style.lineHeight = line.parentElement.classList.contains('testimonials-title') ? '0.9' : '1.4';
            line.parentNode.insertBefore(wrapper, line);
            wrapper.appendChild(line);
          });
        });

        // Set initial state for lines (hidden)
        const allSubtitleLines = subtitleSplitTexts.flatMap((splitText) => splitText.lines);
        const allHeaderLines = [...titleSplitText.lines, ...allSubtitleLines];
        gsap.set(allHeaderLines, { yPercent: 110 });

        return allHeaderLines;
      }

      // Initialize SplitText for testimonial card content
      function initTestimonialCardAnimation(card) {
        const title = card.querySelector('.testimonial-title');
        const text = card.querySelector('.testimonial-text');
        const author = card.querySelector('.testimonial-author');

        const elements = [title, text, author].filter((el) => el);
        if (elements.length === 0) return [];

        const allLines = [];

        elements.forEach((element) => {
          const splitText = new SplitText(element, { type: 'lines', linesClass: 'line' });

          // Create mask wrapper for each line
          splitText.lines.forEach((line) => {
            const wrapper = document.createElement('div');
            wrapper.style.overflow = 'hidden';
            wrapper.style.lineHeight = element.classList.contains('testimonial-title') ? '1.1' : '1.4';
            line.parentNode.insertBefore(wrapper, line);
            wrapper.appendChild(line);
          });

          allLines.push(...splitText.lines);
        });

        // Set initial state
        gsap.set(allLines, { yPercent: 110 });

        return allLines;
      }

      // Initialize header text after fonts are ready
      let headerLines;
      if (document.fonts && document.fonts.ready) {
        document.fonts.ready.then(function () {
          headerLines = initHeaderTextReveal();
        });
      } else {
        setTimeout(() => {
          headerLines = initHeaderTextReveal();
        }, 100);
      }

      // Create observer for header animations
      const headerObserver = new IntersectionObserver(
        function (entries) {
          if (entries[0].isIntersecting && headerLines) {
            const tl = gsap.timeline();

            // Animate header lines
            tl.to(headerLines, {
              yPercent: 0,
              duration: 1.8,
              stagger: 0.15,
              ease: 'power4.out',
            });

            headerObserver.disconnect();
          }
        },
        { threshold: 0.1 }
      );

      headerObserver.observe(section);

      // Observe testimonial cards for animations
      const observeTestimonialCards = () => {
        const testimonialCards = document.querySelectorAll('.testimonial-card');

        testimonialCards.forEach((card) => {
          // Initialize animation for this card
          const cardLines = initTestimonialCardAnimation(card);

          if (cardLines.length === 0) return;

          // Create observer for this specific card
          const cardObserver = new IntersectionObserver(
            function (entries) {
              if (entries[0].isIntersecting) {
                const tl = gsap.timeline();

                // Animate this card's lines
                tl.to(cardLines, {
                  yPercent: 0,
                  duration: 1.8,
                  stagger: 0.1,
                  ease: 'power4.out',
                });

                cardObserver.disconnect();
              }
            },
            {
              threshold: 0.2,
              rootMargin: '0px 0px -50px 0px',
            }
          );

          cardObserver.observe(card);
        });
      };

      // Initial observation of cards
      setTimeout(observeTestimonialCards, 100);

      // Re-observe cards when carousel creates new clones
      const originalObserveTestimonialCards = observeTestimonialCards;
      window.reobserveTestimonialCards = originalObserveTestimonialCards;
    }

    // Initialize Swiper with a delay to ensure it's loaded
    setTimeout(initTestimonialsSwiper, 100);

    // Initialize GSAP animations
    initTestimonialsAnimations();
  });
</script>

