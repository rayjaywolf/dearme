    },
    {
      "type": "header",
      "content": "Separator Settings"
    },
    {
      "type": "color",
      "id": "separator_color",
      "label": "Separator Color",
      "default": "#63001f"
    }
  ],
  "presets": [
    {
      "name": "Certifications"
    }
  ]
}
