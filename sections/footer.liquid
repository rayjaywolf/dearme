<footer class="custom-footer">
  <div class="footer-content">
    <div class="footer-links-row">
      <div class="footer-links-col">
        <div class="footer-links-title">Search</div>
        {% assign footer_menu = linklists.footer.links %}
        {% for link in footer_menu %}
          <a href="{{ link.url }}">{{ link.title }}</a>
        {% endfor %}
      </div>
      <div class="footer-links-col">
        <div class="footer-links-title">Quick Links</div>
        {% assign quick_links_menu = linklists['quick-links'].links %}
        {% for link in quick_links_menu %}
          <a href="{{ link.url }}">{{ link.title }}</a>
        {% endfor %}
      </div>
    </div>

    <div class="footer-logo-col">
      <img
        src="{{ 'footer-logo.png' | asset_url }}"
        alt="Footer Logo"
        class="footer-logo"
        width="80"
        height="80"
      >
    </div>
    <div class="footer-newsletter-col">
      <div class="footer-newsletter-title">Dear Me News + 15% off</div>
      <form class="footer-newsletter-form" autocomplete="off">
        <input
          type="email"
          placeholder="Email address"
          name="email"
          required
        >
        <button type="submit">→</button>
      </form>
      <div class="footer-social-row">
        <a
          href="#"
          aria-label="Instagram"
          class="footer-social-link"
        >
          <img
            src="{{ 'instagram.svg' | asset_url }}"
            alt="Instagram"
            class="footer-social-img"
            width="28"
            height="28"
          >
        </a>
        <a
          href="#"
          aria-label="YouTube"
          class="footer-social-link"
        >
          <img
            src="{{ 'youtube.svg' | asset_url }}"
            alt="YouTube"
            class="footer-social-img"
            width="28"
            height="28"
          >
        </a>
      </div>
    </div>
  </div>
  <div class="footer-copyright">© 2025 Dear Me. All rights reserved.</div>
</footer>

<style>
  .custom-footer {
    background: #63001f;
    color: #fff;
    padding: 0 4rem 3rem;
    position: sticky;
    bottom: 0;
    z-index: 0;
  }
  .footer-content {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    align-items: start;
    max-width: 1400px;
    margin: 0 auto;
    /* gap: 2.5rem; */
    padding-top: 4rem;
    padding-bottom: 0;
  }
  .footer-links-col {
    display: flex;
    flex-direction: column;
    gap: 1.1rem;
    font-size: 1.05rem;
  }
  .footer-links-row {
    display: flex;
    gap: 8rem;
  }
  .footer-links-title {
    font-family: 'Gumani', serif;
    font-size: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: #fff;
    opacity: 0.7;
    margin-bottom: 0.7rem;
    font-weight: 500;
  }
  .footer-links-col a {
    color: #fff;
    text-decoration: none;
    opacity: 0.92;
    transition: opacity 0.2s;
  }
  .footer-links-col a:hover {
    opacity: 1;
    text-decoration: underline;
  }
  .footer-logo-col {
    display: flex;
    justify-content: center;
    align-items: flex-start;
  }
  .footer-logo {
    width: 60px;
    height: 60px;
    object-fit: contain;
  }
  .footer-newsletter-col {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 1.2rem;
    justify-content: flex-start;
  }
  .footer-newsletter-title {
    font-size: 1.75rem;
    font-family: 'Gumani', serif;
    margin-bottom: 0.5rem;
  }
  .footer-newsletter-form {
    display: flex;
    width: 100%;
    /* max-width: 350px; */
    border: 1px solid #fff;
    border-radius: 2px;
    overflow: hidden;
    background: transparent;
  }
  .footer-newsletter-form input[type='email'] {
    flex: 1;
    padding: 0.7rem 1rem;
    border: none;
    background: transparent;
    color: #fff;
    font-size: 1rem;
    outline: none;
  }
  .footer-newsletter-form button {
    background: none;
    border: none;
    color: #fff;
    font-size: 1.5rem;
    padding: 0 1rem;
    cursor: pointer;
    transition: color 0.2s;
  }
  .footer-newsletter-form button:hover {
    color: #e95d8d;
  }
  .footer-copyright {
    text-align: center;
    color: #fff;
    opacity: 0.7;
    font-size: 0.95rem;
    margin-top: 2.5rem;
  }
  @media (max-width: 900px) {
    .custom-footer {
      padding: 0 1rem 2rem;
    }
    .footer-content {
      grid-template-columns: 1fr;
      gap: 2rem;
      text-align: center;
      padding-top: 3rem;
    }
    .footer-links-col,
    .footer-logo-col,
    .footer-newsletter-col {
      align-items: center;
      justify-content: center;
    }
    .footer-logo {
      margin: 0 auto;
    }
    .footer-newsletter-form {
      max-width: 100%;
    }
  }
  .footer-social-row {
    display: flex;
    gap: 1.2rem;
    margin-top: 1.2rem;
  }
  .footer-social-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: opacity 0.2s, transform 0.2s;
    opacity: 0.85;
  }
  .footer-social-link:hover {
    opacity: 1;
    transform: scale(1.08);
  }
  .footer-social-img {
    width: 28px;
    height: 28px;
    display: block;
  }
</style>

